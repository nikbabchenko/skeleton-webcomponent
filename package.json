{
  "name": "skeleton-webcomponent-loader",
  "version": "2.1.1",
  "description": "Skeleton loader webcomponent developed in stencil.js",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/skeleton/skeleton.js",
  "engines": {
    "node": ">=12"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "prepublish": "npm run build",
    "commit": "npx git-cz",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@stencil/core": "^2.13.0",
    "@stencil/sass": "^1.5.2"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/puppeteer": "^3.0.1",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^26.4.2",
    "jest-cli": "^26.4.2",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "puppeteer": "^5.2.1",
    "standard-version": "^9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "github:nikbabchenko/skeleton-webcomponent"
  },
  "homepage": "https://skeleton-webcomponent-loader.web.app",
  "keywords": [
    "skeleton",
    "skeleton-component",
    "webcomponent",
    "ghost",
    "ghost component",
    "skeleton webcomponent",
    "skeleton loader",
    "loader"
  ]
}
